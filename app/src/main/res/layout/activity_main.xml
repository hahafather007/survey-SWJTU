<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/dl_main"
    android:layout_height="match_parent">

    <!--make a drawer-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/menu"
            android:padding="20dp"
            android:id="@+id/iv_main_menu"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/main_text_view_margin"
            android:layout_marginRight="@dimen/main_text_view_margin"
            android:orientation="vertical"
            android:layout_height="wrap_content">
    
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_text_view_height"
                android:text="新建工程"
                android:textStyle="bold"
                android:background="@drawable/re_hollow_r25_back"
                android:gravity="center"
                android:id="@+id/tv_main_new_project"
                android:textColor="@color/text_view_default_color"
                android:textSize="@dimen/main_text_view_size"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_text_view_height"
                android:text="导入工程"
                android:textStyle="bold"
                android:background="@drawable/re_hollow_r25_back"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/tv_main_input_project"
                android:textColor="@color/text_view_default_color"
                android:textSize="@dimen/main_text_view_size"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_text_view_height"
                android:text="历史工程"
                android:textStyle="bold"
                android:background="@drawable/re_hollow_r25_back"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/tv_main_history_project"
                android:textColor="@color/text_view_default_color"
                android:textSize="@dimen/main_text_view_size"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_text_view_height"
                android:text="导出工程"
                android:textStyle="bold"
                android:background="@drawable/re_hollow_r25_back"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/tv_main_output_project"
                android:textColor="@color/text_view_default_color"
                android:textSize="@dimen/main_text_view_size"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_text_view_height"
                android:text="退 出"
                android:textStyle="bold"
                android:background="@drawable/re_hollow_r25_back"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/tv_main_login_out"
                android:textColor="@color/text_view_default_color"
                android:textSize="@dimen/main_text_view_size"/>




        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@mipmap/bg_drawer"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铁路勘测数字化采集系统"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_title_size"
            android:textColor="@color/text_view_default_color"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:layout_marginTop="20dp"
            android:background="@color/line_default_color"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="50dp"
            android:id="@+id/fl_main_clear"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="18dp"
                android:src="@drawable/clear"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="清除缓存"
                android:layout_marginLeft="50dp"
                android:textSize="@dimen/main_text_view_size"
                android:textColor="@color/text_view_default_color"/>


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/fl_main_manual"
            android:paddingLeft="50dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="18dp"
                android:src="@drawable/orientation"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="操作指南"
                android:layout_marginLeft="50dp"
                android:textSize="@dimen/main_text_view_size"
                android:textColor="@color/text_view_default_color"/>


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/fl_main_about"
            android:paddingLeft="50dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="18dp"
                android:src="@drawable/about"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="关于我们"
                android:layout_marginLeft="50dp"
                android:textSize="@dimen/main_text_view_size"
                android:textColor="@color/text_view_default_color"/>


        </FrameLayout>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>