<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="44dp"
    android:background="@drawable/re_solid_r8_white"
    android:layout_marginRight="44dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="新建工程"
        android:gravity="center"
        android:textSize="@dimen/main_text_view_size"
        android:textColor="@color/text_view_default_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/line_default_color"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:hint="请输入工程名"
        android:padding="10dp"
        android:inputType="text"
        android:id="@+id/et_dialog_input"
        android:layout_marginLeft="12dp"
        android:textSize="@dimen/main_text_view_size"
        android:textColor="@color/text_view_default_color"
        android:layout_marginRight="12dp"
        android:background="@drawable/re_hollow_r4_back"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/line_default_color"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="确定"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/tv_dialog_sure"
            android:textColor="@color/text_sure_blue"/>

        <View
            android:layout_width="@dimen/line_size"
            android:layout_height="match_parent"
            android:background="@color/line_default_color"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="取消"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/tv_dialog_cancel" />

    </LinearLayout>


</LinearLayout>