<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scrollbars="none"
       android:overScrollMode="never"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <TextView
               android:layout_width="248dp"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:text="刺点描述："
               android:layout_marginTop="8dp"
               android:textColor="#333"
               />
           <TextView
               android:layout_marginTop="4dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="#999"
               android:textSize="14sp"
               android:text="坐标X：403254.6651694332"
               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="#999"
               android:textSize="14sp"
               android:text="坐标Y：3404662.8115282874"
               />
           <TextView
               android:layout_width="248dp"
               android:layout_height="wrap_content"
               android:textColor="#999"
               android:textSize="14sp"
               android:text="位置：犀浦西南交通大学体育馆南侧国道旁"
               android:maxLines="2"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:text="实物场景："
               android:layout_marginTop="4dp"
               android:textColor="#333"
               />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:orientation="horizontal"
              android:layout_marginTop="4dp"
              >
              <ImageView
                  android:layout_width="120dp"
                  android:layout_height="120dp"
                  android:background="@mipmap/spiker_test1"
                  />
              <ImageView
                  android:layout_width="120dp"
                  android:layout_height="120dp"
                  android:background="@mipmap/spiker_test2"
                  android:layout_marginStart="8dp"
                  />

          </LinearLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:text="模拟草图："
               android:layout_marginTop="4dp"
               android:textColor="#333"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="120dp"
               android:orientation="horizontal"
               android:layout_marginTop="4dp"
               >
               <ImageView
                   android:layout_width="120dp"
                   android:layout_height="120dp"
                   android:background="@mipmap/spiker_test3"
                   />

           </LinearLayout>
           <Button
               android:text="测试float"
               android:id="@+id/btn_folat"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>
   </ScrollView>
    <ImageView
        android:id="@+id/iv_marker_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="end|top"
        android:src="@mipmap/ic_marker_close"
        android:paddingStart="12dp"
        android:paddingBottom="12dp"
        />



</FrameLayout>